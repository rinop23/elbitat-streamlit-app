# Streamlit secrets for production deployment
# Copy this to .streamlit/secrets.toml and fill in your values

[credentials.usernames.admin]
name = "Administrator"
password = "$2b$12$..."  # Generate with: python -c "import bcrypt; print(bcrypt.hashpw('your_password'.encode(), bcrypt.gensalt()).decode())"

[credentials.usernames.elbitat]
name = "Elbitat Team"
password = "$2b$12$..."  # Generate with bcrypt

[cookie]
expiry_days = 30
key = "your-random-secret-key-here-change-this"
name = "elbitat_auth_cookie"

# Note: preauthorized parameter removed in streamlit-authenticator 0.4.x
# Use register_user function instead if you need user registration

# OpenAI API for Content Generation
OPENAI_API_KEY = "sk-your-openai-api-key-here"

# Email Marketing APIs (NEW - for Email Campaigns feature)
# Get SendGrid API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY = "your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL = "noreply@yourdomain.com"  # Must be verified in SendGrid

# Get Serper API key from: https://serper.dev/api-key (OPTIONAL - free DuckDuckGo fallback available)
SERPER_API_KEY = "your-serper-api-key-here"

# Social Media API Credentials
META_ACCESS_TOKEN = "your_meta_token"
META_PAGE_ID = "your_page_id"
META_INSTAGRAM_ACCOUNT_ID = "your_ig_account_id"
META_PIXEL_ID = "your_pixel_id"  # Optional, for Conversions API

TIKTOK_ACCESS_TOKEN = "your_tiktok_token"
TIKTOK_OPEN_ID = "your_tiktok_open_id"
